<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/layout_bg"
    android:orientation="vertical">

    <LinearLayout style="@style/row_style">

        <TextView
            style="@style/btn_style"
            android:text="1" />

        <TextView
            style="@style/btn_style"
            android:text="2" />

        <TextView
            style="@style/btn_style"
            android:text="3" />
    </LinearLayout>

    <LinearLayout style="@style/row_style">

        <TextView
            style="@style/btn_style"
            android:text="4" />

        <TextView
            style="@style/btn_style"
            android:text="5" />

        <TextView
            style="@style/btn_style"
            android:text="6" />
    </LinearLayout>

    <LinearLayout style="@style/row_style">

        <TextView
            style="@style/btn_style"
            android:text="7" />

        <TextView
            style="@style/btn_style"
            android:text="8" />

        <TextView
            style="@style/btn_style"
            android:text="9" />
    </LinearLayout>

    <LinearLayout style="@style/row_style">

        <View
            style="@style/btn_style"
            android:background="@color/layout_bg" />

        <TextView
            style="@style/btn_style"
            android:text="0" />

        <ImageView
            style="@style/btn_style"
            android:background="@drawable/selector_back_bg" />
    </LinearLayout>
</LinearLayout>