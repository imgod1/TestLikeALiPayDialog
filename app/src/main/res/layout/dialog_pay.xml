<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white"
    android:orientation="vertical">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70">

        <ImageView
            android:id="@+id/img_cancel"
            android:layout_width="@dimen/dp70"
            android:layout_height="@dimen/dp70"
            android:padding="@dimen/dp16"
            android:src="@drawable/icon_x" />

        <TextView
            android:id="@+id/txt_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="请输入支付密码"
            android:textColor="@color/black"
            android:textSize="@dimen/dp20" />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp1"
        android:background="@color/layout_bg" />

    <com.example.imgod.testlikealipaydialog.view.PasswordEditText
        android:id="@+id/pet_top"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp70"
        android:layout_marginLeft="@dimen/dp10"
        android:layout_marginRight="@dimen/dp10"
        android:layout_marginTop="@dimen/dp10"
        app:bgCorner="@dimen/dp8"
        android:background="@null" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="right">

        <TextView
            android:id="@+id/txt_forget_pwd"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp10"
            android:layout_marginLeft="@dimen/dp10"
            android:layout_marginRight="@dimen/dp10"
            android:layout_marginTop="@dimen/dp8"
            android:gravity="center_vertical|right"
            android:text="忘记密码?" />
    </LinearLayout>


    <com.example.imgod.testlikealipaydialog.view.CustomerKeyboard
        android:id="@+id/ckb_main"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" />
</LinearLayout>